<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/image"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/estetic_medicine" />

        <TextView
            android:id="@+id/tv_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:text="@string/estetic_medicine_3"
            android:textColor="@color/tangaroa_900"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/iv_main" />

        <TextView
            android:id="@+id/tv_em_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:text="@string/estetic_medicine_4"
            android:textColor="@color/tangaroa_900"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_main" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cl_em_iv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/bg_transparent__no_stroke_16"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_em_6">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_child1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_transparent__no_stroke_16"
                    android:contentDescription="@string/image"
                    android:outlineProvider="background"
                    android:scaleType="centerCrop"
                    app:circularflow_defaultRadius="50dp"
                    app:layout_constraintBottom_toTopOf="@id/tv_em_8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/estetic_medicine_1" />

                <TextView
                    android:id="@+id/tv_em_8"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_blue_bottom_16"
                    android:gravity="center"
                    android:text="@string/before_surgery"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cl_em_iv_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/bg_transparent__no_stroke_16"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/cl_em_iv_1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_child2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/image"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@id/tv_em_9"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/estetic_medicine_2" />

                <TextView
                    android:id="@+id/tv_em_9"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_blue_bottom_16"
                    android:gravity="center"
                    android:text="@string/before_surgery"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cl_em_iv_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/bg_transparent__no_stroke_16"
            app:cardCornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_em_iv_2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_child3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/image"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toBottomOf="@id/tv_em_10"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/estetic_medicine_3" />

                <TextView
                    android:id="@+id/tv_em_10"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_blue_bottom_16"
                    android:gravity="center"
                    android:text="@string/before_surgery"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
</layout>